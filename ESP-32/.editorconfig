root = true

# New line preferences
end_of_line = crlf
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 2
charset = utf-8

[*.cs]
indent_style = space
indent_size = 4
charset = utf-8

[*.xml]
indent_style = space
indent_size = 2
charset = utf-8

# IDE0001: Simplify Names
dotnet_diagnostic.IDE0001.severity = none